<div class="row">
    <div class="col-md-6 mt-4 text-center">
        <table class="table table-sm">
            <thead>
                <tr>
                    {{#each array.[0]}}
                    <th>{{@key}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each array}}
                <tr>
                    {{#each this}}
                    <td>{{this}}</td>
                    {{/each}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="col-md-6 mt-4">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/producto/edit/{{proSingle.codigo}}" method="post">
                        <h3 class="card-title text-center">Editar Datos</h3>
                        <div class="form-group">
                            <input type="text" value="{{proSingle.nombre}}" name="nombre" class="form-control" placeholder="Producto" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{proSingle.precio}}" name="precio" class="form-control" placeholder="Precio">
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="codigo_fabricante" laceholder="codigo_fabricante">
                                <option>{{CoFa.nombre}}</option>
                                {{#each array2}}
                                <option>{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardas
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>